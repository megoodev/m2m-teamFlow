generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Channel {
  id          String    @id @default(uuid())
  name        String
  workspaceId String
  createdBy   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  message     Message[]
}

model Message {
  id           String   @id @default(uuid())
  content      String
  imageUrl     String?
  authorId     String
  authorEmail  String
  AuthorName   String
  AuthorAvatar String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  channel      Channel?  @relation(fields: [channelId], references: [id])
  channelId    String?
} 
